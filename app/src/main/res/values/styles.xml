<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:dropDownListViewStyle">@style/Spinner</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorControlNormal">#ffffff</item>
        <item name="colorControlActivated">#ffffff</item>
        <item name="colorControlHighlight">#ffffff</item>
        <item name="android:itemBackground">@color/primary</item>
        <item name="android:divider">#ffffff</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:itemTextAppearance">@style/MyActionBar.MenuTextStyle</item>
        <item name="android:colorForeground">@color/bright_foreground_material_light</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Edittext" parent="Base.V12.Widget.AppCompat.EditText">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColorHint">#e6907f</item>
        <item name="android:ems">10</item>
        <item name="android:textColor">#e6907f</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Boton" >
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:elevation" tools:targetApi="lollipop">4dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/primary</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">18sp</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Spinner" >
        <item name="android:dropDownSelector">@color/primary</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_width">180dp</item>
        <item name="android:textColor">#e6907f</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:divider">@android:color/white</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="Textview" >
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="Divider_overflowMenu" parent="android:Theme.Holo.Light">
        <item name="android:divider">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/primary</item>
    </style>

    <style name="MyActionBar.MenuTextStyle"
        parent="style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>