<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/negocio"
    android:background="@mipmap/men_2"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_local"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/AppTheme"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/fondo">

        <EditText
            style="@style/Edittext"
            android:inputType="textPersonName"
            android:id="@+id/editnombre"
            android:hint="@string/editt_nombre" />

        <EditText
            style="@style/Edittext"
            android:inputType="number"
            android:id="@+id/editprecio"
            android:hint="@string/Editt_precio" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Unidades"
            android:clickable="True" />

        <Button
            style="@style/Boton"
            android:id="@+id/btnagregar"
            android:text="@string/boton_agregar"/>

    </LinearLayout>

    <ListView
        android:isScrollContainer="False"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listProductos"
        android:layout_gravity="center_horizontal"
        android:clickable="True" />

</LinearLayout>