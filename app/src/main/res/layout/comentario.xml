<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:id="@+id/Comentario"
    android:background="@mipmap/menu">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"></FrameLayout>



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtcoment"
            android:hint="Da tu opiniÃ³n"
            android:lines="3"
            android:maxLines="3"
            android:nestedScrollingEnabled="true"
            android:maxLength="400" />

    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btncoment"
        android:layout_alignBottom="@+id/txtcoment"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/comentar" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/btncoment"
        android:layout_alignEnd="@+id/btncoment"
        android:layout_above="@+id/txtcoment"
        android:id="@+id/linearLayout">

    </LinearLayout>

    <ListView
        android:isScrollContainer="false"
        android:layout_width="fill_parent"
        android:layout_height="331dp"
        android:id="@+id/comentarios"
        android:layout_below="@+id/btncoment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:headerDividersEnabled="false"
        android:footerDividersEnabled="false"
        android:minHeight="331dp" />

</LinearLayout>